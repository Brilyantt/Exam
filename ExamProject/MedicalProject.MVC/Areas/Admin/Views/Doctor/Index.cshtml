
@model List<Doctor>

        <div class="content-wrapper">
          <div class="row">
            
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">First Table</h4>
                  <p class="card-description">
                        <a asp-area="Admin" asp-controller="Doctor" asp-action="Create"> Create <code>Table</code></a>
                  </p>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                            Image
                          </th>
                          <th>
                            #
                          </th>
                          <th>
                           Doctor Name
                          </th>
                          <th>
                            Category
                          </th>
                          <th>
                            Email Address
                          </th>
                                    <th>
                                        Phone Number
                                    </th>
                                    <th>
                                        Action
                                    </th>
                        </tr>
                      </thead>
                      <tbody>
                                @foreach(Doctor item in Model)
                                {
                                    <tr>
                                        <td class="py-1">
                                            <img src="~/assets/images/img/@item.ImgPath" alt="image" />
                                        </td>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </td>
                                        <td>
                                            @item.DoctorName
                                        </td>
                                        <td>
                                            @item.Category
                                        </td>
                                        <td>
                                            @item.EmailAddress
                                        </td>
                                        <td>
                                            @item.PhoneNumber
                                        </td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="Doctor" asp-action="Info" asp-route-id="@item.Id" class="btn btn-info rounded-pill m-2">Info</a>
                                            <a asp-area="Admin" asp-controller="Doctor" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning rounded-pill m-2">Update</a>
                                            <a asp-area="Admin" asp-controller="Doctor" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger rounded-pill m-2">Delete</a>
                                            
                                        </td>
                                    </tr>
                                }

                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            
          </div>
        </div>



  