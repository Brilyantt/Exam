
@model Doctor

<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Striped Table</h4>
                    <p class="card-description">
                        Add class <code>.table-striped</code>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Doctor Name
                                    </th>
                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Email Address
                                    </th>
                                    <th>
                                        Phone Number
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                               
                                    <tr>
                                        <td class="py-1">
                                            <img src="~/assets/images/img/@Model.ImgPath" alt="image" />
                                        </td>
                                        <td>
                                            @Model.Id
                                        </td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </td>
                                        <td>
                                            @Model.DoctorName
                                        </td>
                                        <td>
                                            @Model.Category
                                        </td>
                                        <td>
                                            @Model.EmailAddress
                                        </td>
                                        <td>
                                            @Model.PhoneNumber
                                        </td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="Doctor" asp-action="Info" asp-route-id="@Model.Id" class="btn btn-info rounded-pill m-2">Info</a>
                                            <a asp-area="Admin" asp-controller="Doctor" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning rounded-pill m-2">Update</a>
                                            <a asp-area="Admin" asp-controller="Doctor" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger rounded-pill m-2">Delete</a>

                                        </td>
                                    </tr>
                                

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



